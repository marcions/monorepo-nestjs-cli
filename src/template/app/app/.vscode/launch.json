{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "App: @app/your.api",
      "type": "node",
      "request": "launch",
      "localRoot": "${workspaceFolder}/../../",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start:your-api:dev"
      ],
      "console": "integratedTerminal",
      "smartStep": true,
      "sourceMaps": true,
      "remoteRoot": "${workspaceFolder}/src",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Test: @app/your.api",
      "type": "node",
      "args": [
        "--runInBand",
        "--config=${workspaceFolder}/jest.config.js"
      ],
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "test"
      ],
      "port": 9229,
      "sourceMaps": true
    }
  ]
}